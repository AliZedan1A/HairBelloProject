@page "/Admin"
@using ClientSide.Components.AdminComponents

<div class="admin-container">
    <header class="admin-header">
        <h2>لوحة التحكم</h2>
    </header>

    <nav class="admin-nav">
        <button @onclick="() => SetActiveTab(AdminTabs.Barbers)" 
        class="nav-btn @(activeTab == AdminTabs.Barbers ? "active" : "")">
            <span class="icon">&#128100;</span>
            <span class="text">الحلاقون</span>
        </button>
        <button @onclick="() => SetActiveTab(AdminTabs.Orders)" 
        class="nav-btn @(activeTab == AdminTabs.Orders ? "active" : "")">
            <span class="icon">&#128197;</span>
            <span class="text">الحجوزات</span>
        </button>
        <button @onclick="() => SetActiveTab(AdminTabs.Images)" 
        class="nav-btn @(activeTab == AdminTabs.Images ? "active" : "")">
            <span class="icon">&#128247;</span>
            <span class="text">الصور</span>
        </button>
        <button @onclick="() => SetActiveTab(AdminTabs.AppManagement)" 
        class="nav-btn @(activeTab == AdminTabs.AppManagement ? "active" : "")">
            <span class="icon">&#9881;</span>
            <span class="text">التطبيق</span>
        </button>
        <button @onclick="() => SetActiveTab(AdminTabs.PastOrders)"
                class="nav-btn @(activeTab == AdminTabs.PastOrders ? "active" : "")">
            <span class="icon">&#9746;</span>
            <span class="text">الحجوزات السابقة</span>
        </button>
    </nav>
    
    <main class="admin-content animate-fade-in">
        @if (activeTab == AdminTabs.Barbers)
        {
            <BarbersManagement /> 
        }
        else if (activeTab == AdminTabs.Orders)
        {
            <OrdersManagement />
        }
        else if (activeTab == AdminTabs.Images)
        {
            <ImagesManagement />
        }
        else if (activeTab == AdminTabs.AppManagement)
        {
            <AppManagement />
        }
        else if (activeTab == AdminTabs.PastOrders)
        {
            <PastOrderMangment />
        }
    </main>
</div>
<style>
    /* العنوان */
h3 {
    text-align: center;
    margin-bottom: 1rem;
}

/* حاوية اختيار التاريخ */
.date-range {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 1rem;
}

.date-range label {
    font-weight: bold;
    margin-right: 0.25rem;
}

.date-range input[type="date"] {
    padding: 0.3rem;
    font-size: 0.9rem;
}

/* زر عرض الطلبات */
.date-range button {
    padding: 0.4rem 0.8rem;
    font-size: 0.9rem;
    cursor: pointer;
    border: none;
    border-radius: 4px;
    background-color: #2196f3;
    color: #fff;
}

/* مؤشر التحميل */
.loading-indicator {
    text-align: center;
    font-weight: bold;
    margin: 1rem 0;
}

/* حاوية الإحصائيات */
.stats-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
    align-items: center;
}

.stat-item {
    display: flex;
    gap: 0.5rem;
}

.stat-label {
    font-weight: bold;
}

/* قائمة الطلبات */
.orders-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
}

/* بطاقة الطلب */
.order-card {
    background: #fff;
    border-radius: 6px;
    padding: 0.8rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    font-size: 0.9rem;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
}

.order-card.canceled {
    opacity: 0.7;
    border-left: 4px solid #f44336;
}

/* زر تحميل الملف */
button {
    cursor: pointer;
    padding: 0.4rem 0.8rem;
    font-size: 0.9rem;
    border: none;
    border-radius: 4px;
    background-color: #4caf50;
    color: #fff;
}

</style>
@code {
    private enum AdminTabs
    {
        Barbers,
        Orders,
        Images,
        AppManagement,
        PastOrders
    }

    private AdminTabs activeTab = AdminTabs.Barbers;

    private void SetActiveTab(AdminTabs tab)
    {
        activeTab = tab;
    }
}
